<h1>List of my tasks</h1>

<ul>
  <% @tasks.each do |task|%>
    <li>
    <% if task[:completed] %>
      <input type="checkbox" checked="checked">
    <% else %>
      <input type="checkbox">
    <% end %>
      <%= link_to task[:title], task_path(task) %>
    </li>
  <% end %>
</ul>

<p><%= link_to 'Add a new task', tasks_new_path %></p>
